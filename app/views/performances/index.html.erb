<!-- Navbar that is hidden on mobile -->

<div class="main-container">
  <div
  id="map" data-map="performances"
  style="width: 100%;
  height: calc(100% - 60px - 325px);"
  data-markers="<%= @markers.to_json %>">
</div>


<!-- Search bar -->

<div class="cards-container">

  <div>
    <!-- <%= render "shared/searchbar" %> -->
    <div class="search-bar">
      <div class="search-bar-icon">
        <i class="fas fa-search"></i>
      </div>
     <%= form_tag performances_path, method: :get do %>
     <%= text_field_tag :query,
     params[:query],
     class: "form-search",
      placeholder: "Explore performances in your area ..."
      %>
      <% end %>
    </div>
  </div>

 <!-- Slider main container -->

 <div class="swiper-container" data-slider="performances_index">
   <div class="swiper-wrapper">
     <% index = 0 %>
     <% @performances.each do |performance| %>
     <div class="swiper-slide" data-index=<%= index %>>
       <%= link_to performance_path(performance) do %>

       <div class="card"  data-index=<%= index %>>
         <div class="card-bg-img" style="background-image: url('<%= cl_image_path(performance.photo_url, crop: :fill, secure: true) %>')"></div>

         <div class="card-description">
          <p><i class="fas fa-user"></i>&nbsp;<strong> <%= performance.user.artist_name %> </strong></p>
          <p><i class="fas fa-map-pin"></i> &nbsp; <i><strong> <%= performance.location.split(',')[0] %></strong></i></p>

          <% start_time = performance.start_time %>
          <% end_time = performance.end_time %>
          <div class="card-time-container card-time">
            <!-- <p class="card-time"><i class="far fa-clock"></i> <strong><%= start_time.strftime("%a %m/%d/%y")  %></strong></p> -->
            <!-- <p class="card-time-grow"></p> -->
            <p class="card-time"><i class="far fa-clock"></i>&nbsp;<strong>  Until <%= end_time.strftime("%-I %p") %></strong></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <% index += 1 %>
    <% end %>

   </div>
 </div>

</div>
<!-- Footer for mobile device -->
<%= render 'shared/footer' %>
