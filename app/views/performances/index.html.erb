<div class="main-container">
  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>">
  </div>


  <div class="cards-container">

    <div class="row">

  <%= form_tag performances_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search by city"
    %>
  <% end %>

  <h1>Performances (<%= @performances.length %>)</h1>

      <% @performances.each do |performance| %>
      <div class="col-xs-12 col-sm-4">

        <%= link_to performance_path(performance) do %>

        <div class="card">
          <%= cl_image_tag performance.photo_url, width: 350, crop: :fill %>

          <div class="card-description">
             <h2> <%= performance.user.name %></h2>
              <p><i class="fas fa-map-pin"></i><%= performance.location %></p>
          </div>
        </div>

        <% end %>
      </div>
      <% end %>
    </div>
  </div>
